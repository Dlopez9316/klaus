# Database Configuration
DATABASE_URL=postgresql://reconciliation_user:your_password_here@localhost:5432/reconciliation_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# API Keys - REQUIRED
PLAID_CLIENT_ID=your_plaid_client_id_here
PLAID_SECRET=your_plaid_secret_here
PLAID_ENV=sandbox  # sandbox, development, or production
PLAID_PRODUCTS=transactions
PLAID_COUNTRY_CODES=US

HUBSPOT_API_KEY=your_hubspot_private_app_key_here
HUBSPOT_BASE_URL=https://api.hubapi.com

ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here  # Optional backup

# Email Configuration (Optional)
SENDGRID_API_KEY=your_sendgrid_api_key_here
NOTIFICATION_EMAIL=alerts@yourcompany.com
NOTIFICATION_FROM_EMAIL=noreply@yourcompany.com

# Application Configuration
APP_NAME=Reconciliation Agent
APP_VERSION=1.0.0
SECRET_KEY=your-secret-key-change-this-in-production
ENVIRONMENT=development  # development, staging, production
DEBUG=True

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api
API_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Matching Configuration
MATCHING_CONFIDENCE_THRESHOLD_AUTO=95  # Auto-approve if confidence >= this
MATCHING_CONFIDENCE_THRESHOLD_REVIEW=70  # Flag for review if >= this
MATCHING_DATE_RANGE_DAYS=7  # Consider transactions within +/- days
MATCHING_FUZZY_THRESHOLD=80  # Minimum fuzzy match score (0-100)

# Reconciliation Schedule
RECONCILIATION_SCHEDULE_CRON=0 8 * * *  # Daily at 8 AM
RECONCILIATION_LOOKBACK_DAYS=90  # How far back to check for unmatched transactions

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_SALT_ROUNDS=12

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text
LOG_FILE=logs/app.log

# Monitoring
SENTRY_DSN=  # Optional: Sentry error tracking
PROMETHEUS_ENABLED=True
METRICS_PORT=9090

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Feature Flags
FEATURE_AUTO_APPROVAL=False  # Enable auto-approval of high confidence matches
FEATURE_EMAIL_NOTIFICATIONS=False  # Send email notifications
FEATURE_PAYMENT_REMINDERS=False  # Automated payment reminders
FEATURE_ML_LEARNING=False  # Machine learning from corrections

# Testing
TEST_MODE=False
MOCK_EXTERNAL_APIS=False
